#!/bin/sh

brew bundle --file=- <<EOF
brew 'httpie'
brew 'highlight'
brew 'yarn'
brew 'mysql'
brew 'tree'
brew 'gist'
brew 'speedtest_cli'
brew 'rbenv-default-gems'
brew 'rbenv-binstubs'
brew 'zsh-syntax-highlighting'
brew 'zsh-autosuggestions'
brew 'mongodb'
brew 'rethinkdb'
brew 'watchman'

tap 'caskroom/cask'

cask 'google-chrome'
cask 'spotify'
cask 'vlc'
cask 'mongodb'
cask 'iterm2'
cask 'quicklook-json'
cask 'quicklook-csv'
cask 'atom'
cask 'robomongo'
cask 'ngrok'
cask 'skype'
cask 'postman'
cask 'sketch'
cask 'spectacle'
cask 'the-unarchiver'
cask 'slack'
cask '1password'
cask 'docker-toolbox'
EOF

fancy_echo "Installing some default gems..."
gem_install_or_update "rails"
gem_install_or_update "mailcatcher"

fancy_echo "Modifying macOS defaults..."
sh ./.osx_defaults.sh

fancy_echo "Fixing new-express-babel-starter bin permissions..."
chmod 500 ~/.bin/new-express-babel-starter

fancy_echo "Fixing new-rails-app bin permissions..."
chmod 500 ~/.bin/new-rails-app

fancy_echo "Installing some default NPM packages..."
npm install -g json
npm install -g nodemon
npm install -g babel-cli
npm install -g create-react-app
npm install -g react-native-cli
npm install -g express

fancy_echo "Cleaning up..."
brew cleanup
brew cask cleanup

if [ -r "$HOME/.rcrc" ]; then
  fancy_echo "Updating dotfiles ..."
  rcup
fi
